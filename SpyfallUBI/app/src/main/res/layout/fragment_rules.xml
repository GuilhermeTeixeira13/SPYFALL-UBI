<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rules"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/gameObjectives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Game Objectives"
                android:fontFamily="@font/roboto_black"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rules"/>

            <TextView
                android:id="@+id/gameObjectives1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="The spy: try to guess the round's location. Infer from others' questions and answers."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/gameObjectives"/>

            <TextView
                android:id="@+id/gameObjectives2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Other players: figure out who the spy is."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/gameObjectives1"/>

            <TextView
                android:id="@+id/playersGuessingTheSpy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Players guessing the spy"
                android:fontFamily="@font/roboto_black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gameObjectives2"/>

            <TextView
                android:id="@+id/playersGuessingTheSpy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Putting up for vote: at any time, a player can try to indict a suspected spy by putting that suspect up for vote."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/playersGuessingTheSpy"/>

            <TextView
                android:id="@+id/playersGuessingTheSpy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="The player who receives more votes has to reveal his card. In case of a draw, the game proceeds."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/playersGuessingTheSpy1"/>

            <TextView
                android:id="@+id/playersGuessingTheSpy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="If the revealed card is a spy card, then that spy is eliminated. If the only spy alive is eliminated, then non-spies win and each one receive 1 point (the player how started the vote receives 1 extra point)."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/playersGuessingTheSpy2"/>

            <TextView
                android:id="@+id/playersGuessingTheSpy4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="If the revealed card is a non-spy card, then the spies win and recieves 4 points."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/playersGuessingTheSpy3"/>

            <TextView
                android:id="@+id/spyGuessingTheLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Spy guessing the location"
                android:fontFamily="@font/roboto_black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/playersGuessingTheSpy4"/>

            <TextView
                android:id="@+id/spyGuessingTheLocation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Spy guesses: at any time, the spy can reveal that they are the spy and make a guess at what the location is. The round immediately ends."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/spyGuessingTheLocation"/>

            <TextView
                android:id="@+id/spyGuessingTheLocation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="If the guess is write, then the spies win and receive 4 points. If not, the civilians win and each one receive 1 point."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/spyGuessingTheLocation1"/>

            <TextView
                android:id="@+id/clockRunsOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Clock runs out"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_black"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/spyGuessingTheLocation2"/>

            <TextView
                android:id="@+id/clockRunsOut1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Players vote on who is a spy and the one who gets more votes has to reveal his card. If everyone get the same amount of votes, then they vote again."
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/clockRunsOut"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>