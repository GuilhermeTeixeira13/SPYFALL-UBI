<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/side_menu"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_landing_page" />

        <ImageView
            android:layout_width="169dp"
            android:layout_height="173dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="132dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/spyImage"
            android:src="@drawable/spy"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPlay"
            android:layout_width="181dp"
            android:layout_height="44dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="304dp"
            android:drawableStart="@drawable/play_icon"
            android:paddingStart="30dp"
            android:paddingEnd="40dp"
            android:background="@drawable/rounded_corners"
            android:text="PLAY"
            android:textSize="17dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Text_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:text="Spyfall @ UBI"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_black"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Text_TitleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:text="A party game that will help you discover UBI and CovilhÃ£!"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Text_HowToPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            android:text="How to play?"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_black"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Text_ThatALook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:text="Take a look at the rules!"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>